{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "outDir": "../build",
    "rootDir": "../src",
    "declaration": true,
    "sourceMap": false,
    "importHelpers": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018"]
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../build"]
}
