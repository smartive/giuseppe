{
    "extends": "@smartive/tslint-config",
    "rules": {
        "function-name": false,
        "ter-arrow-parens": [
            true,
            "as-needed"
        ],
        "ter-indent": [
            true,
            4,
            {
                "SwitchCase": 1
            }
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ]
    }
}
