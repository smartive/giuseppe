{
  "name": "giuseppe",
  "version": "1.2.0",
  "description": "An attributed controller routing system for expressJS with typescript decorators and annotations",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "clean": "del-cli ./build ./coverage",
    "build": "npm run clean && tsc -p ./config/tsconfig.prod.json",
    "develop": "npm run clean && tsc -p .",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "npm run lint && npm run clean && jest --coverage --mapCoverage",
    "test:watch": "npm run clean && jest --watch"
  },
  "engines": {
    "node": ">=7",
    "npm": "*",
    "yarn": "*"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/smartive/giuseppe.git"
  },
  "keywords": [
    "express",
    "routing",
    "typescript",
    "decorators",
    "api",
    "controller"
  ],
  "author": "Christoph BÃ¼hler <christoph@smartive.ch>",
  "contributors": [
    {
      "name": "Dominique Wirz",
      "email": "dominique@smartive.ch"
    },
    {
      "name": "Moreno Feltscher",
      "email": "moreno@smartive.ch"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smartive/giuseppe/issues"
  },
  "homepage": "https://github.com/smartive/giuseppe#readme",
  "dependencies": {
    "@types/express": "^4.0.35",
    "@types/http-status": "^0.2.29",
    "@types/node": "^7.0.12",
    "express": "^4.15.2",
    "filewalker": "^0.1.3",
    "http-status": "^1.0.1",
    "reflect-metadata": "^0.1.10",
    "tslib": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^19.2.3",
    "del-cli": "^0.2.1",
    "jest": "^20.0.0",
    "ts-jest": "^20.0.2",
    "tslint": "^5.1.0",
    "tslint-config-airbnb": "^1.1.1",
    "typescript": "^2.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/test/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ]
  }
}
