{
  "name": "giuseppe-version-plugin",
  "version": "0.0.0-development",
  "description": "Giuseppe plugin that adds a `@Version` route modificator to add versioning to an api.",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "clean": "del-cli ./build ./coverage",
    "build": "npm run clean && tsc -p ./config/tsconfig.build.json",
    "develop": "npm run clean && tsc -p .",
    "lint": "tslint -c ./tslint.json -p ./config/tsconfig.build.json",
    "test": "npm run lint && npm run clean && jest -c ./jest.json",
    "test:watch": "npm run clean && jest -c ./jest.json --watch",
    "typedoc": "del-cli ./docs && typedoc --ignoreCompilerErrors --out ./docs --mode file --tsconfig ./config/tsconfig.build.json ./src/",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "giuseppe",
    "plugin",
    "express",
    "versioning",
    "@Version",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/smartive/giuseppe.git"
  },
  "engines": {
    "node": ">=8",
    "npm": "*"
  },
  "author": "Christoph BÃ¼hler <christoph@smartive.ch>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/smartive/giuseppe/issues"
  },
  "homepage": "https://github.com/smartive/giuseppe#readme",
  "dependencies": {
    "giuseppe": "*"
  },
  "devDependencies": {
    "@smartive/tslint-config": "^4.0.0",
    "@types/jest": "^23.0.0",
    "@types/request": "2.47.1",
    "del-cli": "^1.1.0",
    "jest": "^23.0.0",
    "request": "^2.83.0",
    "ts-jest": "^23.0.0",
    "tslint": "^5.9.1",
    "tsutils": "^2.18.0",
    "typedoc": "^0.11.0",
    "typescript": "^2.6.2"
  }
}
